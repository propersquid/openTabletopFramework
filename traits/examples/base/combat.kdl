            unarmed_defence_relative -100
            melee_defence_relative -100
            ranged_defence_relative -100
            combat_trauma true
        }
    }

    active {
        duration "instant"
        reset_condition "Cure combat related PTSD"

        effects {
            unarmed_combat_relative +100
            melee_weapons_combat_relative +100
            ranged_weapons_combat_relative +100
            unarmed_defence_relative +100
            melee_defence_relative +100
            ranged_defence_relative +100
        }
    }
